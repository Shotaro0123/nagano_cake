<h1>注文情報確認</h1>
<table>
 <table border="1"  width="700" >
 <thead>
  <tr>
   <th>商品名</th>
   <th>単価（税込）</th>
   <th>数量</th>
   <th>小計</th>
  </tr>
 </thead>
 <tbody>
  <% @cart_items.each do |cart_item| %>
  <tr>
   <td>
   <%= image_tag(cart_item.item.get_image, size: "60x50" ) %>
   <%= cart_item.item.name %>
   </td>
   <td>
    <%= cart_item.item.with_tax_price %>
   </td>
   <td>
    <%= cart_item.amount %>
   </td>
   <td>
    <%= cart_item.subtotal %>
   </td>
  </tr>
  <% end %>
 </tbody>
</table>
<table>
<table border = "1" width = "250" height = "60" >
 <tr>
  <th>送料</th>
  <% @order.shipping_cost = 800 %>
  <td><%= @order.shipping_cost %></td>
 </tr>
 <tr>
  <th>商品合計</th>
  <td><%= @cart_items.sum(&:subtotal) %></td>
 </tr>
 <tr>
  <th>請求金額</th>
  <td>
   <% @order.total_payment = @order.shipping_cost + @cart_items.sum(&:subtotal) %>
   <%= @order.total_payment %>
  </td>
 </tr>
</table>
<table>
 <tr>
  <th>支払い方法</th>
  <td><%= @order.payment_method_i18n %></td>
 </tr>
 <tr>
  <th>お届け先</th>
  <td>
   <%= current_customer.address_display %>
   <%= current_customer.full_name %>
   </td>
 </tr>
</table>