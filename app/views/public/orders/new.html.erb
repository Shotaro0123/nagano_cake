<h1>注文情報入力</h1>

<%= form_with model: @order, url: orders_path do |f| %>
 <span>支払い方法</span><br>
 <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
 <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %> <br>

 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %> <br>
 <span>お届け先</span> <br>
 <%= f.radio_button :select_address, 0 %>
 <%= f.label :radio_button_current_address_display, 'ご自身の住所' %> <br>
 <%= current_customer.address_display %> <br>
 <%= current_customer.full_name %> <br>
 <%= f.radio_button :select_address, 1 %>
 <%= f.label :radio_button_current_select_address_display,  '登録住所から確認' %> <br>
 <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %> <br>
 <%= f.radio_button :select_address, 2 %>
 <%= f.label :radio_button_select_address, '新しいお届け先' %>　<br>
 <span>郵便番号（ハイフンなし）</span>
 <%= f.text_field :postal_code %><br>
 <span>住所</span>
 <%= f.text_field :address %><br>
 <span>宛名</span>
 <%= f.text_field :name %><br>
 <%= f.submit '確認画面へ進む' %>
<% end %>