<h1>ショッピングカート</h1>
 <div>
  <table>
   <thead>
    <tr>
     <th>商品名</th>
     <th>単価（税込）</th>
     <th>数量</th>
     <th>小計</th>
     <th> </th>
    </tr>
   </thead>
   <tbody>
   <%= @cart_items.each do |cart_item| %>
    <tr>
     <td><%= cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price %></td>
     <td>
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
      <%= f.select :amount, *[1..10] %>
      <%= f.submit '変更' %>
      <% end %>
     </td>
     <td><%= cart_item.subtotal %></td>
     <td>
      <% if @cart_item.customer = current_customer %>
      <%= link_to "削除する", cart_item_path(@cart_item), method: :delete %>
      <% end %>
      </td>
    </tr>
   <% end %>
   </tbody>
  </table>
 </div>
